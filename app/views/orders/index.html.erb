  <tr>
    <td><%= order.leg5 %></td>
    <td><%= order.leg6 %></td>
    <td><%= order.leg7 %></td>
    <td><%= order.desh %></td>
    <td><%= order.units %></td>
    <td><%= order.name %></td>
    <td><%= order.company %></td>
    <td><%= order.city %></td>
    <td><%= order.phone %></td>
    <td><%= order.email %></td>
    <td><%= order.payment %></td>
    <td><%= order.created_at %></td>
  </tr>
<% end %>
</table>

