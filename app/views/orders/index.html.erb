<h1>Listing orders</h1>

<table class="table table table-striped" id="transaction">
  <thead>  
    <tr>
    <th>Leg5</th>
    <th>Leg6</th>
    <th>Leg7</th>
    <th>Desh</th>
    <th>Unidades</th>
    <th>Nombre</th>
    <th>Empresa</th>
    <th>Ciudad</th>
    <th>Telefono</th>
    <th>Email</th>
    <th>Tipo Pago</th>
    <th>Fecha</th>
  </tr>
  </thead>  
