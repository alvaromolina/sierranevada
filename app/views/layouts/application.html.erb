$("img.hoverImage").mouseover(function(){
  if ($(this).is('.activeImage')) return;
  var src = "/assets/"+$(this).attr("id")+ "_hover.png";
  $(this).attr("src", src);

}).mouseout(function(){
  if ($(this).is('.activeImage')) return; // Skip mouseout for active image
  var src = "/assets/"+$(this).attr("id")+ ".png";
  $(this).attr("src", src);
}).click(function(){
  // remove previous active state
  var src = "/assets/"+$('.activeImage').not(this).attr("id")+".png";
  $('.activeImage').not(this).attr("src", src);
  $('.activeImage').not(this).removeClass('activeImage');
  // set new active state
  //var src = "/assets/"+$(this).attr("id")+"_active.png";
  //console.log(src);
  //$(this).attr("src", src);
  $(this).addClass('activeImage');
  //windows.location.href =  $(this).attr("href");
  return true;
});

