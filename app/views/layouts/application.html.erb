$(document).ready(function() {


    function goToByScroll(href){

        id = href.replace("/", "");

        $('html,body').animate({
            scrollTop: $(id).offset().top+102},
            'slow');
    }
    $(".menu_slide").click(function(e) {
        e.preventDefault();
        goToByScroll($(this).attr("href"));           
    });

